  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:8000/api/health",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Start Stream",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"rtspUrl\": \"rtsp://your-camera-url\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/stream/start",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "stream", "start"]
        }
      }
    },
    {
      "name": "Stop Stream",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"streamId\": \"PUT-STREAM-ID-HERE\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/stream/stop",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "stream", "stop"]
        }
      }
    },
    {
      "name": "Create Overlay",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test Overlay\",\n  \"elements\": [\n    { \"type\": \"text\", \"content\": \"Hello World\", \"x\": 10, \"y\": 20 }\n  ]\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/overlays",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "overlays"]
        }
      }
    },
    {
      "name": "List Overlays",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:8000/api/overlays",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "overlays"]
        }
      }
    },
    {
      "name": "Get Overlay",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:8000/api/overlays/{{overlayId}}",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "overlays", "{{overlayId}}"]
        }
      }
    },
